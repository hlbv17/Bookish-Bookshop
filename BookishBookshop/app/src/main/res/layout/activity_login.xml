<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".Login">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="757dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/img_bb"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="90dp"
            android:contentDescription="@string/txtMarca"
            app:srcCompat="@drawable/bookishb" />

        <Button
            android:id="@+id/btnGoogle"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="90dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/borde_redondog"
            android:drawableStart="@drawable/google"
            android:drawableLeft="@drawable/google"
            android:paddingStart="20dp"
            android:paddingLeft="80dp"
            android:paddingEnd="20dp"
            android:paddingRight="80dp"
            android:text="@string/txtGoogle"
            app:layout_constraintBottom_toTopOf="@+id/btnFb"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnFb"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/borde_redondof"
            android:drawableStart="@drawable/fb"
            android:drawableLeft="@drawable/fb"
            android:paddingStart="20dp"
            android:paddingLeft="80dp"
            android:paddingEnd="20dp"
            android:paddingRight="80dp"
            android:text="@string/txtFb"
            android:textColor="#FFFF" />

        <Button
            android:id="@+id/btnTwt"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/borde_redondot"
            android:drawableStart="@drawable/twitter"
            android:drawableLeft="@drawable/twitter"
            android:paddingStart="20dp"
            android:paddingLeft="80dp"
            android:paddingEnd="20dp"
            android:paddingRight="80dp"
            android:text="@string/txtTwt"
            android:textColor="#FFFF" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>